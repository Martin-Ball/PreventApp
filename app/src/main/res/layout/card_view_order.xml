<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/linkiar_search_background"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/Client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/CUIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Client"
            android:layout_alignLeft="@+id/Client"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/image_add_button"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/amountSelected"
            android:src="@drawable/ic_add" />

        <EditText
            android:id="@+id/amountSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/image_remove_button"
            android:hint="0"
            android:inputType="number"
            android:minWidth="48dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/image_delete_button"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_baseline_delete" />

        <ImageView
            android:id="@+id/image_remove_button"
            android:layout_width="34dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="22dp"
            android:layout_toStartOf="@+id/image_delete_button"
            android:src="@drawable/ic_remove" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>


