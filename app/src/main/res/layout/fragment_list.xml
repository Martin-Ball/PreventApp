<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".ui.list.ListFragment">

    <LinearLayout
        android:id="@+id/linearLayoutNewCompany"
        android:layout_width="294dp"
        android:layout_height="102dp"
        android:background="@drawable/shape"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_truck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Crear nuevo proveedor"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/new_company"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_add"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="NUEVO PROVEEDOR"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerCompany"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_blue"
        android:elevation="10dp"
        android:minHeight="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="294dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_xls_icon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Añadir Archivos excel"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/list_file"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_list"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="AÑADIR LISTA"
            app:cornerRadius="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/client_file"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_person_add"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="AÑADIR CLIENTES"
            app:cornerRadius="20dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="341dp"
        android:layout_height="397dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="TextView" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>