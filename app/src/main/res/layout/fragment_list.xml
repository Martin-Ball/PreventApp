<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.list.ListFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="294dp"
        android:layout_height="180dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/shape"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_xls_icon" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="168dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Añadir Archivos excel"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/list_file"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_list"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="AÑADIR LISTA"
            app:cornerRadius="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/client_file"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/linkiar_signin"
            android:drawableLeft="@drawable/ic_person_add"
            android:drawableTint="@color/white"
            android:elevation="10dp"
            android:text="AÑADIR CLIENTES"
            app:cornerRadius="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="295dp"
        android:layout_height="423dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>